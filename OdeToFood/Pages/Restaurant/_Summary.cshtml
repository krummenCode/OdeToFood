@using OdeToFood.Core;
@model Restaurant

<div class="col-sm-6">
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">Location: @Model.Location</h6>
            <p class="card-text">Cuisine: @Model.Cuisine</p>

            <a class="btn btn-lg card-link"
                asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-info-circle"></i>
            </a>
            <a class="btn btn-lg card-link"
                asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-lg card-link"
                asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-trash-alt"></i>
            </a>

        </div>
    </div>
</div>
